@page
@model pizza_fyard.Pages.Admin.IndexModel
@{
}

<div>
    <h1 class="mb-3">Connectez vous </h1>
    <div class="col-md-6">
        @if (Model.DisplayInvalidAccountMessage) { 
            <div class="alert alert-danger" role="alert">
                Ce compte est invalide!
            </div>
        }
    </div>
    <form method="post" class="row g-3">
        <div class="col-md-6">
            <input type="text" name="username" placeholder="Email" class="form-control mb-3">
            <input type="password" name="password" placeholder="Mot de passe" class="form-control mb-3">
        </div>
        <div class="row">
            <div class="col-md-6">
                <button class="btn btn-primary">Se Connecter</button>
            </div>                
        </div>
    </form>    
</div>