@page
@model pizza_fyard.Pages.Admin.Pizzas.IndexModel

@{
    ViewData["Title"] = "Administration des Pizzas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Nouveau</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].vegan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].ingredients)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pizza) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vegan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ingredients)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PizzaID">Editer</a> |
                <a asp-page="./Delete" asp-route-id="@item.PizzaID">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
